
@{
    ViewBag.Title = "edit";
}

<h2>Edit</h2>
<a href="/Product/ViewCart" class="btn btn-info">View Cart</a>
<a href="/Product/Show" class="btn btn-info">Product List</a>
<form  action="" method="post">
    ID: <input type="number" name="id" value="@Model.id" class="form-control" readonly />
    Product Name: <input type="text" name="Name" value="@Model.Name" placeholder="Enter Product name" class="form-control" />
    Price: <input type="text" name="Price" value="@Model.Price" placeholder="Enter price of product" class="form-control" />
    Quantity: <input type="number" name="Qty" value="@Model.Qty" placeholder="Enter Quantity of products" min="0" class="form-control" />
    <input type="submit" value="Update product" class="form-control" />
</form>

